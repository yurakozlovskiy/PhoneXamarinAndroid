<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
	android:minWidth="300dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
		android:text="Add new Phone"
		android:layout_height="60dp"
		android:layout_width="match_parent"
		android:layout_gravity="center"
		android:gravity="center"
		android:textSize="18sp"
		android:textStyle="bold"
	/>

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/name">
			    <EditText
                    android:hint="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:imeOptions="actionNext"
                    android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/companyName">
			    <EditText
                    android:hint="Company Name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:imeOptions="actionNext"
                    android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/price">
			<EditText
				android:id="@+id/price"
				android:hint="Price"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:textSize="18sp"
				android:imeOptions="actionNext"
				android:inputType="number" />
		</android.support.design.widget.TextInputLayout>

        <fr.ganfra.materialspinner.MaterialSpinner
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/memoryCapacitySpinner"
			app:ms_enableFloatingLabel="true"
			app:ms_floatingLabelText="Select Memory Capacity"
			app:ms_hint="Select Memory Capacity"
			app:ms_alignLabels="true"
		/>

        <fr.ganfra.materialspinner.MaterialSpinner
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/colorSpinner"
			app:ms_enableFloatingLabel="true"
			app:ms_floatingLabelText="Select Color"
			app:ms_hint="Select Color"
			app:ms_alignLabels="true"
		/>

		<DatePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

		<Button 
			android:id="@+id/addNewPhone" 
			android:layout_height="40dp"
			android:layout_width="300dp"
			android:layout_gravity="center_horizontal"	
			android:layout_marginTop="20dp"
			android:text="Add"/>

	</LinearLayout>

</LinearLayout>
