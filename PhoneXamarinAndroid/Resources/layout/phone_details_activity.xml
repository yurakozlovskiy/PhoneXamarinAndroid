<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:padding="16dp">
    <TextView
		android:text="Phone Details"
		android:layout_height="60dp"
		android:layout_width="match_parent"
		android:layout_gravity="center"
		android:gravity="center"
		android:textSize="28sp"
		android:textStyle="bold"
	/>

   <!-- <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:contentDescription="description" /> -->
	
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:layout_marginLeft="32dp"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/nameLabel"
			android:text="Name: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
		<TextView
			android:id="@+id/nameDetail"
			android:text="IPhone XR"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:layout_toRightOf="@+id/nameLabel"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
	</RelativeLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="32dp"
		android:layout_marginTop="8dp"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/companyNameLabel"
			android:text="Company Name: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
		<TextView
			android:id="@+id/companyNameDetail"
			android:text="Apple"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:layout_toRightOf="@+id/companyNameLabel"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
	</RelativeLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="32dp"
		android:layout_marginTop="8dp"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/priceLabel"
			android:text="Price: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
		<TextView
			android:id="@+id/priceDetail"
			android:text="1100 USD"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:layout_toRightOf="@+id/priceLabel"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
	</RelativeLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="32dp"
		android:layout_marginTop="8dp"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/colorLabel"
			android:text="Color: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
		<TextView
			android:id="@+id/colorDetail"
			android:text="Black"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:layout_toRightOf="@+id/colorLabel"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
	</RelativeLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="32dp"
		android:layout_marginTop="8dp"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/publishYearLabel"
			android:text="Publish Year: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
		<TextView
			android:id="@+id/publishYearDetail"
			android:text="01/01/2000"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:layout_toRightOf="@+id/publishYearLabel"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
	</RelativeLayout>
</LinearLayout>
